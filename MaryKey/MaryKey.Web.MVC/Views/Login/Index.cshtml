@model MaryKey.Web.MVC.Models.LoginModel
@{
    ViewBag.Title = "Index";
}


<h2 class="Black col-lg-offset-5">Login</h2>
<div class="col-lg-offset-4">
    <h4 class="text-danger">@Html.ValidationMessage("INVALID_LOGIN")</h4>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form white" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);

        <div class="form-group">
            @Html.LabelFor(m => m.Login, new { @class = "Black" })
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Login, null, new { @class = "black" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Senha, new { @class = "Black" })
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Senha, null, new { @class = "black" })
        </div>
        <input type="submit" name="enviar" value="Login" class="btn" />
    }
</div>

