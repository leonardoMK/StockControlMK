@model MaryKey.Web.MVC.Models.LoginModel
@{
    ViewBag.Title = "Index";
}

<div class="text-center">
    <h2 class="" style="padding-top:10px;">Login</h2>
    <div class="login">
        <h4 class="text-danger">@Html.ValidationMessage("INVALID_LOGIN")</h4>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = " " }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true);

            <div class="form-group" style="">
                @Html.LabelFor(m => m.Login, new { @class = "Black" })
                @Html.TextBoxFor(m => m.Login, new { @class = "form-inline input-Style" })<br />
                @Html.ValidationMessageFor(m => m.Login, null, new { @class = "text-warning" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Senha, new { @class = "Black" })
                @Html.PasswordFor(m => m.Senha, new { @class = "form-inline input-Style" })<br />
                @Html.ValidationMessageFor(m => m.Senha, null, new { @class = "text-warning" })
            </div>
            <input type="submit" name="enviar" value="Login" class="btn btn-default btnLogin" />
        }
    </div>
</div>
