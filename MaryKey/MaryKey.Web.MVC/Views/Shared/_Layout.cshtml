<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Products Mary Kay</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />
        <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link rel='shortcut icon' type='image/x-icon' href='~/Content/Images/favicon.ico' />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top mynav-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Relatorio/RelatorioProdutos" class="btn">Lista de Produtos</a>
                    </li>
                    <li>

                        <div class="pull-left">
                            <form class="navbar-form" role="search" action='@Url.Action("RelatorioProdutos","Relatorio")'>
                                <div class="input-group">
                                    <input type="text" class="form-control autocompleteInput" placeholder="Pesquisar" name="nome" id="nome">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>

</li>
                </ul>
                <div class="pull-right divSair"><a class="glyphicon glyphicon-log-out btnAdd" style="margin-top:15px;" href="~/Login/Sair"></a> </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="bottom: 0;width: 100%;background-color: #eee;float: left;padding: 6px;border-radius: 1px 5px 5px 1px;border-left: 3px solid #666;">
            <p style="font-size:12px; color:#555; float:left; margin:6px 0;">&copy; @DateTime.Now.Year - Alguns direitos reservados</p>
            <p style="font-size:12px; color:#555; float:right;margin:6px 0;">Desenvolvido por <a href="https://github.com/leonardo-alves" target="_blank" style="color: #555;font-weight: bold;font-size: 11.5px;">Leonardo Alves da Rosa </a> - Web Developer</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jssor.slider-21.1.6.min.js"></script>
    @RenderSection("Scripts", false)
        <script>
        $("document").ready(function () {
            $("#nome").autocomplete({
                source: '@Url.Action("ProdutosAutoComplete", "Relatorio")',
                select: function () { $("#Pesquisar").click(); }
            });
        });
        </script>
</body>
</html>